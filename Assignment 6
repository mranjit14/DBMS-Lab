CREATE TABLE CUSTOMERS_59 (
CUSTOMERID NUMBER(1) PRIMARY KEY,
CUSTOMERNAME VARCHAR2(25),
CONTACTNAME VARCHAR2(25),
ADDRESS VARCHAR2(25),
CITY VARCHAR2(15),
POSTALCODE NUMBER(5),
COUNTRY VARCHAR2(15));

CREATE TABLE SUPPLIERS (
SUPPLIERID NUMBER(1) PRIMARY KEY,
SUPPLIERNAME VARCHAR2(40),
CONTACTNAME VARCHAR2(25),
ADDRESS VARCHAR2(25),
CITY VARCHAR2(15),
POSTALCODE NUMBER(5),
COUNTRY VARCHAR2(15));

