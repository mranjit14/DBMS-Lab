1.
SELECT CITY FROM CUSTOMERS_59 UNION SELECT CITY FROM SUPPLIERS;

2.
SELECT CITY FROM CUSTOMERS_59 UNION ALL SELECT CITY FROM SUPPLIERS;

3.
SELECT  CITY FROM CUSTOMERS_59 WHERE CUSTOMERS_59.COUNTRY='Germany' UNION SELECT CITY FROM SUPPLIERS WHERE SUPPLIERS.COUNTRY='Germany';

4.
SELECT CUSTOMERNAME, SUPPLIERNAME FROM CUSTOMERS_59, SUPPLIERS WHERE SUPPLIERS.CITY IN (SELECT CITY FROM CUSTOMERS_59 INTERSECT SELECT CITY FROM SUPPLIERS) AND CUSTOMERS_59.CITY IN (SELECT CITY FROM CUSTOMERS_59 INTERSECT SELECT CITY FROM SUPPLIERS);

5.
SELECT COUNTRY FROM SUPPLIERS WHERE COUNTRY IN(SELECT COUNTRY FROM SUPPLIERS MINUS SELECT COUNTRY FROM CUSTOMERS_59);
